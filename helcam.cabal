        HelVM.HelCam.Machines.WhiteSpace.EvaluatorSpecData
        HelVM.HelCam.Machines.WhiteSpace.OperandParsersSpec
  other-extensions:
  build-depends:
      base
    , relude               == 0.7.0.0
    , containers           == 0.6.2.1
    , split
    , data-default

