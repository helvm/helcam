category:            Language
build-type:          Simple
extra-source-files:  docs/CHANGELOG.md

source-repository head
  type:              git
  location:          https://github.com/helvm/helcam

library
  other-modules:
        HelVM.HelCam.Machines.BrainFuck.Token
        HelVM.HelCam.Machines.BrainFuck.Symbol
